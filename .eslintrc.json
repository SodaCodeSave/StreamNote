{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "extends": ["plugin:vue/vue3-recommended"],
      "rules": {
        "vue/multi-word-component-names": "off",
        "vue/no-unused-vars": "error"
      }
    },
    {
      "files": ["*.js"],
      "rules": {
        "no-unused-vars": "warn"
      }
    }
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "always-multiline"]
  }
}